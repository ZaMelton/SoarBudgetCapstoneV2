@model Repository.Models.RandomExpense

@{
    ViewData["Title"] = "CreateRandomExpense";
}

<h1>CreateRandomExpense</h1>

<h4>RandomExpense</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateRandomExpense">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RandomExpenseName" class="control-label"></label>
                <input asp-for="RandomExpenseName" class="form-control" />
                <span asp-validation-for="RandomExpenseName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-primary" asp-action="Index">Back to Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
